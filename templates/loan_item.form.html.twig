{% import "components/form/fields_macros.html.twig" as fields %}

<div class="container">
    {# First Form: Search for an item #}
    <div class="card mb-4">
        <div class="card-header">
            <h3>{{ __('Search for an item to loan') }}</h3>
        </div>
        <div class="card-body">
            <form action="loan_item.form.php" method="post">
                <input type="hidden" name="plugin_itemloans_loan_items_id" value="{{ loan_item.fields.id }}">
                <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">

                <div class="form-group row">
                    <label for="item_identifier" class="col-sm-3 col-form-label">{{ __('Item Identifier') }}</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="item_identifier" name="item_identifier" placeholder="{{ __('Serial, Inventory, Immobilization, or Legacy ID') }}">
                    </div>
                </div>

                <div class="text-right">
                    <button type="submit" class="btn btn-primary" name="search_item" value="1">
                        <i class="fas fa-search"></i> {{ _x('button', 'Search') }}
                    </button>
                </div>
            </form>
        </div>
    </div>

    {# Second Form: Loan cart #}
    {% if items is not empty %}
    <div class="card">
        <div class="card-header">
            <h3>{{ __('Items to be Loaned') }}</h3>
        </div>
        <div class="card-body">
            <form action="loan_item.form.php" method="post" id="loan_form">
                <input type="hidden" name="plugin_itemloans_loan_items_id" value="{{ loan_item.fields.id }}">
                <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>{{ __('Item Name') }}</th>
                            <th>{{ __('Inventory Number') }}</th>
                            <th>{{ __('Matched Identifier') }}</th>
                            <th>{{ __('Item Type') }}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key, item in items %}
                            <tr>
                                <td>{{ item.name }}</td>
                                <td>{{ item.otherserial }}</td>
                                <td>{{ item.matched_identifier }}</td>
                                <td>{{ item.item_type }}</td>
                                <td>
                                    <button type="submit" class="btn btn-danger btn-sm" name="remove_item_from_cart" value="{{ key }}">
                                        <i class="fas fa-trash"></i> {{ _x('button', 'Remove') }}
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="row">
                    {{ fields.dropdownField('Location', 'locations_id', '', __('Select Location'), {'display': true, 'is_recursive': 1, 'right': 'all'}) }}

                    {{ fields.dropdownField('State', 'states_id', '', __('Select Status'), {'display': true}) }}

                    {{ fields.dropdownField('User', 'user_id', '', __('Select User'), {'display': true, 'is_recursive': 1, 'right': 'all'}) }}

                    {{ fields.datetimeField('return_by_date', item.fields['return_by_date'], __('Return by Date'), {'helper': __('Empty for infinite'), 'checkIsExpired': true}) }}

                    <div class="form-field row col-12 col-sm-6 mb-2">
                        <div class="col-xxl-7 offset-xxl-5">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="ask_to_confirm" id="ask_to_confirm" value="1">
                                <label class="form-check-label" for="ask_to_confirm">{{ __('Ask to confirm') }}</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-field row col-12 col-sm-6 mb-2">
                        <div class="col-xxl-7 offset-xxl-5">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="send_reminder" id="send_reminder" value="1">
                                <label class="form-check-label" for="send_reminder">{{ __('Send reminder') }}</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-right mt-4">
                    <button type="submit" class="btn btn-success" name="loan_items"  value="1">
                        <i class="fas fa-check"></i> {{ __('Loan Items') }}
                    </button>
                </div>
            </form>
        </div>
    </div>
    {% endif %}
</div>

{# Modal for active loan confirmation #}
{% if active_loan_confirmation is not null %}
<div class="modal fade show" id="active-loan-modal" style="display: block;" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ __('Active Loan Found', 'itemloans') }}</h5>
            </div>
            <div class="modal-body">
                <p>
                    {{ __('This item is currently loaned to', 'itemloans') }} 
                    <strong>{{ active_loan_confirmation.loan.loan_user_name }}</strong>.
                </p>
                <p>{{ __('Do you want to return that loan and continue creating a new one?', 'itemloans') }}</p>
            </div>
            <div class="modal-footer">
                 <form action="loan_item.form.php" method="post" class="d-inline">
                     <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">
                     <button type="submit" name="cancel_return_and_loan" class="btn btn-secondary">{{ _x('button', 'No') }}</button>
                </form>
                 <form action="loan_item.form.php" method="post" class="d-inline">
                     <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">
                     <button type="submit" name="confirm_return_and_loan" class="btn btn-primary">{{ _x('button', 'Yes') }}</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop fade show"></div>
{% endif %}

{# Modal for multiple item selection #}
{% if multiple_results is not empty %}
<div class="modal fade show" id="multiple-items-modal" style="display: block;" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ __('Multiple items found', 'itemloans') }}</h5>
                <form action="loan_item.form.php" method="post" class="ml-auto">
                     <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">
                     <button type="submit" name="cancel_modal" class="close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </form>
            </div>
            <div class="modal-body">
                <p>{{ __('Please select the item you wish to loan:', 'itemloans') }}</p>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>{{ __('Item Name') }}</th>
                            <th>{{ __('Serial Number') }}</th>
                            <th>{{ __('Inventory Number') }}</th>
                            <th>{{ __('Item Type') }}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for key, item in multiple_results %}
                            <tr>
                                <td>{{ item.name }}</td>
                                <td>{{ item.serial }}</td>
                                <td>{{ item.otherserial }}</td>
                                <td>{{ item.item_type }}</td>
                                <td>
                                    <form action="loan_item.form.php" method="post">
                                        <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">
                                        <input type="hidden" name="selected_item_key" value="{{ key }}">
                                        <button type="submit" name="select_item_from_modal" class="btn btn-primary btn-sm">
                                            <i class="fas fa-check"></i> {{ _x('button', 'Select') }}
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                 <form action="loan_item.form.php" method="post">
                     <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}">
                     <button type="submit" name="cancel_modal" class="btn btn-secondary">{{ _x('button', 'Cancel') }}</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal-backdrop fade show"></div>
{% endif %}

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('item_identifier');
        if (searchInput) {
            searchInput.focus();
        }

        const loanForm = document.getElementById('loan_form');
        if(loanForm) {
            loanForm.addEventListener('submit', function(event) {
                const submitter = event.submitter;
                if (submitter && submitter.name === 'loan_items') {
                    const userDropdown = document.querySelector('select[name="user_id"]');
                    if (userDropdown.value == '0' || userDropdown.value == '') {
                        alert('You must select a user for the loan');
                        event.preventDefault();
                    }
                }
            });
        }
    });
</script>